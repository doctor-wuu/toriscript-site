---
// src/layouts/Layout.astro
import BaseLayout from './BaseLayout.astro';

const { title, fullWidth = false } = Astro.props;
---

<BaseLayout title={title}>
  <slot name="head" slot="head" />

  <slot name="logo" slot="logo" />
  <slot name="breadcrumbBorder" slot="breadcrumbBorder" />
  <slot name="breadcrumbs" slot="breadcrumbs" />
  <slot name="titleBlock" slot="titleBlock" />

  <!-- ✅ メイン + サイドバー -->
  <main class="max-w-7xl mx-auto px-4 py-8 flex gap-8">
    <!-- ✅ 左メインカラム -->
    <div class={`flex-1 ${fullWidth ? 'max-w-full' : 'max-w-[48rem]'}`}>
      <slot name="main" />
      <slot />
    </div>

    <!-- ✅ 右サイドバー -->
    <aside class="hidden lg:block w-[20rem]">
      <slot name="sidebar" />
    </aside>
  </main>
</BaseLayout>


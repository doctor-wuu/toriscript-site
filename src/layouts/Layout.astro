---

const { title } = Astro.props;
---

<html lang="ja">
  <head>
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@300;400;500;700&display=swap" rel="stylesheet">

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <!-- ✅ グローバルCSS -->
    <style is:global lang="postcss">
      @import "../styles/global.css";
    </style>

    <!-- ✅ Google アナリティクス（GA4） -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-147344458"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-147344458');
    </script>

    <!-- ✅ Google AdSense -->
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-2685020883138124"
      crossorigin="anonymous"></script>
  </head>

  <body class="font-sans text-gray-800 bg-white">
    <header class="py-8">
      <!-- ✅ ロゴ -->
      <div class="text-center mt-6 mb-2">
        <img src={`${import.meta.env.BASE_URL}images/tori-logo2.png`}alt="Tori Script ロゴ" class="h-20 mx-auto" />
      </div>



    <!-- ✅ 本文 -->
    <main class="max-w-7xl mx-auto flex px-4 py-8 gap-8">
  <!-- メイン -->
  <div class="flex-1 max-w-[48rem]">
    <slot name="main" />
    <slot />
  </div>

  <!-- サイドバー -->
  <aside class="hidden lg:block w-[20rem]">
    <slot name="sidebar" />
  </aside>
</main>
</html>

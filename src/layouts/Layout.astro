---
// src/layouts/Layout.astro
const { title, pageType = "article" } = Astro.props;
import BaseLayout from './BaseLayout.astro';
---



<BaseLayout title={title} pageType={pageType}>
  <div slot="logo">
    <header class="py-8">
      <div class="text-center mt-6 mb-2">
        <img src={`${import.meta.env.BASE_URL}images/tori-logo2.png`} alt="Tori Script ロゴ" class="h-20 mx-auto" />
      </div>
    </header>
  </div>

  <main class="max-w-7xl mx-auto px-4 py-8 flex gap-8">
    <div class="flex-1 max-w-[48rem]">
      <slot name="main" />
      <slot />
    </div>

    <aside class="hidden lg:block w-[20rem]">
      <slot name="sidebar" />
    </aside>
  </main>
</BaseLayout>

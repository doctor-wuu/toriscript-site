---
const { title } = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <!-- ✅ global.css をインポート -->
    <style is:global lang="postcss">
      @import "../styles/global.css";
    </style>
  </head>

  <body class="article-page font-sans text-[#4a4a4a] bg-white">
    <!-- ✅ ヘッダー -->
    <header class="py-4 flex flex-col items-center">
      <a href="/" class="block">
  <img
    src="/images/tori-logo2.png"
    alt="Tori Script ロゴ"
    class="max-h-[69px] w-auto mx-auto"
  />
</a>
    </header>

    <!-- ✅ パンくず（slot="breadcrumbs"） -->
    <div class="w-full border-t border-gray-200">
      <div class="max-w-4xl mx-auto px-4">
        <slot name="breadcrumbs" />
      </div>
    </div>

    <!-- ✅ 灰色背景のタイトルブロック -->
    <div class="w-full bg-[#f5f5f5] px-4 flex flex-col justify-center" style="min-height: 281px;">
      <div class="max-w-4xl mx-auto w-full py-8">
        <slot name="header" />
      </div>
    </div>

    <!-- ✅ メインエリア：イントロ＋目次＋本文 -->
    <main class="mx-auto px-4 py-8" style="max-width: none;">
      <slot name="intro" />
      <slot name="toc" />
      <slot />
    </main>
  </body>
</html>

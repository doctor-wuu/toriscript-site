---
// src/layouts/BaseLayout.astro
const { title } = Astro.props;
import { SITE } from '@/config';
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <!-- グローバルCSS -->
    <link rel="stylesheet" href={`${import.meta.env.BASE_URL}styles/global.css`} />

    <!-- Google アナリティクス -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-147344458"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-147344458');
    </script>

    <!-- Google AdSense -->
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-2685020883138124"
      crossorigin="anonymous"></script>

      <!-- ✅ ファビコン追加 -->
    <link rel="icon" href="/favicon.png" />

    <!-- 他のメタ情報やCSS -->

  <!-- ✅ RSS フィード追加 -->
  <link
    rel="alternate"
    type="application/rss+xml"
    title="ToriScript RSS Feed"
    href="/rss.xml"
  />

  </head>

  <body class="font-sans text-gray-800 bg-white article-page">
    <!-- ロゴや共通ヘッダー -->
    <slot name="logo" />

    <!-- パンくずリストなど -->
    <slot name="breadcrumbBorder" />
    <slot name="breadcrumbs" />

    <!-- タイトルバー -->
    <slot name="titleBlock" />

    <!-- メイン本文 -->
    <slot />
  </body>
</html>